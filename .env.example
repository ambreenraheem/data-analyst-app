# Azure Function App Settings
FUNCTIONS_WORKER_RUNTIME=python
PYTHON_ISOLATE_WORKER_DEPENDENCIES=1

# Azure Key Vault
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Azure Storage
STORAGE_ACCOUNT_NAME=your-storage-account
BLOB_CONTAINER_FINANCIAL_DOCS=financial-documents

# Azure Cosmos DB
COSMOS_DB_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
COSMOS_DB_DATABASE=financial-insights
COSMOS_CONTAINER_EXTRACTION_RESULTS=extraction-results
COSMOS_CONTAINER_FINANCIAL_METRICS=financial-metrics
COSMOS_CONTAINER_PROCESSING_LOGS=processing-logs

# Azure Service Bus
SERVICE_BUS_NAMESPACE=your-servicebus.servicebus.windows.net
SERVICE_BUS_INGESTION_QUEUE=ingestion-queue
SERVICE_BUS_EXTRACTION_QUEUE=extraction-queue
SERVICE_BUS_VALIDATION_QUEUE=validation-queue

# Azure Document Intelligence
DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-document-intelligence.cognitiveservices.azure.com/

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.applicationinsights.azure.com/

# Application Settings
MAX_FILE_SIZE_MB=50
OCR_CONFIDENCE_THRESHOLD_DOCUMENT=0.75
OCR_CONFIDENCE_THRESHOLD_METRIC=0.70
PROCESSING_TIMEOUT_MINUTES=10
RETENTION_DAYS=2555

# Local Development (Azurite)
AZURITE_BLOB_ENDPOINT=http://127.0.0.1:10000/devstoreaccount1
AZURITE_QUEUE_ENDPOINT=http://127.0.0.1:10001/devstoreaccount1
AZURITE_TABLE_ENDPOINT=http://127.0.0.1:10002/devstoreaccount1
